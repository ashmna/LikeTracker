{
  "name": "Highlight some phrases",
  "description": "Hightlight some pre defined text from websql database after page loads",
  "version": "0.1",
  "permissions": [
    "tabs","<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon128.png",
    "19" : "icon19.png",
    "48" : "icon48.png"
  },
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"         // pay attention to this line
    }
  ],
  "manifest_version":2
}